<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.developer.sangbarca.onlineorderfood.activity.MainActivity"
    android:background="@drawable/background"
    android:weightSum="1">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/txtUsername"
        android:hint="Username"
        android:layout_gravity="bottom"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_edittext"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:id="@+id/txtPassword"
        android:hint="Password"
        android:layout_weight="0.01"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:text="sign in"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:onClick="loginAccount"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp"
            android:background="@drawable/rounded_button1"
            android:layout_weight="1"
            android:textSize="16sp"
            android:onClick="openRegisterScreen"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnForgotPassword"
        android:layout_weight="1"
        android:text="Forgot password"
        android:textColor="@android:color/background_light"
        android:background="@drawable/border_button"
        android:onClick="openGetPassword"
        android:layout_marginTop="20dp" />


</LinearLayout>
